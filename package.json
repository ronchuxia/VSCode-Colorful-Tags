{
  "name": "colorful-tags",
  "displayName": "Colorful Tags",
  "description": "Tag files and folders with colors.",
  "version": "0.1.0",
  "publisher": "XiaChu",
  "repository": {
    "type": "git",
    "url": "https://github.com/ronchuxia/VSCode-Colorful-Tags"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "tags",
    "colors",
    "files",
    "folders",
    "organize"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Colorful Tags",
      "properties": {
        "colorful-tags.decorationsEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Show colored badges for tagged files in the Explorer view."
        }
      }
    },
    "commands": [
      {
        "command": "colorful-tags.addTag",
        "title": "Colorful Tags: Add Tag"
      },
      {
        "command": "colorful-tags.removeTag",
        "title": "Colorful Tags: Remove Tag"
      },
      {
        "command": "colorful-tags.setTagName",
        "title": "Colorful Tags: Rename Tag"
      },
      {
        "command": "colorful-tags.refresh",
        "title": "Colorful Tags: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "colorful-tags.openToSide",
        "title": "Open to the Side (CT)"
      },
      {
        "command": "colorful-tags.revealInExplorer",
        "title": "Reveal in Explorer (CT)"
      },
      {
        "command": "colorful-tags.revealFileInOS",
        "title": "Reveal in Finder (CT)"
      },
      {
        "command": "colorful-tags.copyFilePath",
        "title": "Copy Path (CT)"
      },
      {
        "command": "colorful-tags.copyRelativeFilePath",
        "title": "Copy Relative Path (CT)"
      },
      {
        "command": "colorful-tags.renameFile",
        "title": "Rename (CT)"
      },
      {
        "command": "colorful-tags.deleteFile",
        "title": "Delete (CT)"
      },
      {
        "command": "colorful-tags.openInTerminal",
        "title": "Open in Integrated Terminal (CT)"
      },
      {
        "command": "colorful-tags.newFile",
        "title": "New File (CT)"
      },
      {
        "command": "colorful-tags.newFolder",
        "title": "New Folder (CT)"
      },
      {
        "command": "colorful-tags.clearTagGroup",
        "title": "Colorful Tags: Clear Tag Group"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "colorful-tags.addTag",
          "group": "colorful-tags@1"
        },
        {
          "command": "colorful-tags.removeTag",
          "group": "colorful-tags@2"
        }
      ],
      "view/title": [
        {
          "command": "colorful-tags.refresh",
          "when": "view == colorful-tags.tagsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "colorful-tags.openToSide",
          "when": "view == colorful-tags.tagsView && viewItem == file",
          "group": "navigation@1"
        },
        {
          "command": "colorful-tags.revealInExplorer",
          "when": "view == colorful-tags.tagsView && (viewItem == file || viewItem == folder)",
          "group": "navigation@2"
        },
        {
          "command": "colorful-tags.revealFileInOS",
          "when": "view == colorful-tags.tagsView && (viewItem == file || viewItem == folder)",
          "group": "navigation@3"
        },
        {
          "command": "colorful-tags.openInTerminal",
          "when": "view == colorful-tags.tagsView && (viewItem == file || viewItem == folder)",
          "group": "navigation@4"
        },
        {
          "command": "colorful-tags.newFile",
          "when": "view == colorful-tags.tagsView && viewItem == folder",
          "group": "2_workspace"
        },
        {
          "command": "colorful-tags.newFolder",
          "when": "view == colorful-tags.tagsView && viewItem == folder",
          "group": "2_workspace"
        },
        {
          "command": "colorful-tags.copyFilePath",
          "when": "view == colorful-tags.tagsView && (viewItem == file || viewItem == folder)",
          "group": "6_copypath"
        },
        {
          "command": "colorful-tags.copyRelativeFilePath",
          "when": "view == colorful-tags.tagsView && (viewItem == file || viewItem == folder)",
          "group": "6_copypath"
        },
        {
          "command": "colorful-tags.renameFile",
          "when": "view == colorful-tags.tagsView && (viewItem == file || viewItem == folder)",
          "group": "7_modification"
        },
        {
          "command": "colorful-tags.deleteFile",
          "when": "view == colorful-tags.tagsView && (viewItem == file || viewItem == folder)",
          "group": "7_modification"
        },
        {
          "command": "colorful-tags.addTag",
          "when": "view == colorful-tags.tagsView && (viewItem == file || viewItem == folder)",
          "group": "colorful-tags@1"
        },
        {
          "command": "colorful-tags.removeTag",
          "when": "view == colorful-tags.tagsView && (viewItem == file || viewItem == folder)",
          "group": "colorful-tags@2"
        },
        {
          "command": "colorful-tags.setTagName",
          "when": "view == colorful-tags.tagsView && viewItem == tagGroup",
          "group": "tag_management"
        },
        {
          "command": "colorful-tags.clearTagGroup",
          "when": "view == colorful-tags.tagsView && viewItem == tagGroup",
          "group": "tag_management"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "colorful-tags",
          "title": "Colorful Tags",
          "icon": "$(tag)"
        }
      ]
    },
    "views": {
      "colorful-tags": [
        {
          "id": "colorful-tags.tagsView",
          "name": "Tagged Files",
          "icon": "$(tag)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
